{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/server/*": ["backend/*"]
    }
  },
  "include": [
    "src/backend/index.ts",
    "src/backend/config/**/*",
    "src/backend/db/**/*",
    "src/backend/models/**/*",
    "src/backend/routes/**/*",
    "src/backend/middleware/**/*",
    "src/backend/utils/**/*",
    "src/backend/jobs/**/*",
    "src/backend/services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/backend/tests/**/*",
    "src/server/api/**/*",
    "src/composables/**/*",
    "src/stores/**/*",
    "src/pages/**/*",
    "src/layouts/**/*",
    "src/components/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": false
  }
}